source "https://rubygems.org"

# use awesomeprint to easily debug
gem "awesome_print"

# use dotenv to load .env file in development
gem "dotenv"

# use mailgun to send and recieve emails
gem "mailgun-ruby", "~>1.1.6"

# use mongoid to talk to our mongodb database
gem "mongoid", "~> 6.2.0"

# use rest-client for making HTTP calls
gem "rest-client"

group :production do
  gem "rails_12factor"
end
